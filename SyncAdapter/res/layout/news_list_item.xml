<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="4pt"
	 >

	<ImageView
		android:id="@+id/contacts_list_item_image"
		android:layout_width="68dp"
		android:layout_height="68dp"
		android:adjustViewBounds="true"
		
		android:src="@drawable/ic_launcher"
		android:contentDescription="@string/news_list_image_description" />

	<TextView
		android:id="@+id/contacts_list_item_contact_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/contacts_list_item_image"
		
		android:paddingLeft="8pt"
		android:paddingRight="2pt"
		android:paddingTop="2pt"
		android:paddingBottom="2pt"
		
		android:textSize="20sp"
		android:text="@string/news_list_text_default" />

	<TextView
		android:id="@+id/contacts_list_item_contact_email"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/contacts_list_item_contact_name"
		android:layout_toRightOf="@id/contacts_list_item_image"
		
		android:paddingLeft="18pt"
		android:paddingRight="2pt"
		android:paddingTop="2pt"
		android:paddingBottom="2pt"
		
		android:textSize="12sp"
		android:textColor="@color/gray"
		android:text="@string/news_list_item_url_dafault" />

</RelativeLayout>