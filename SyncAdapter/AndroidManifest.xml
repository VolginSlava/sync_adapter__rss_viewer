<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.syncadapter"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="11"
		android:targetSdkVersion="21" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name=".HomeActivity"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<service 
			android:name="com.example.syncadapter.MyAuthenticatorService" >
			<intent-filter>
				<action android:name="android.accounts.MyAuthenticator"/>
			</intent-filter>
			
			<meta-data 
				android:name="android.accounts.MyAuthenticator"
				android:resource="@xml/authenticator" />
		</service>
		
		<provider 
			android:name="com.example.syncadapter.MyContentProvider"
			android:authorities="com.example.syncadapter.provider"
			android:exported="false"
			android:syncable="true"
			>
			
		</provider>
	</application>

</manifest>
